<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CovidApp.Views.FatigueTracker"
             xmlns:vm="clr-namespace:CovidApp.ViewModels"
           
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:FatigueTrackerViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
           
            <Style TargetType="Frame">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="BorderColor" Value="#91BAD2"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="HasShadow" Value="True"/>
               <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>
            
            <Style x:Key="myButton" TargetType="Button">
                <Setter Property="BorderColor" Value="Black"/>
                 <Setter Property="CornerRadius" Value="10"/>
                  <Setter Property="BorderWidth" Value="1.5"/>
                <Setter Property="BackgroundColor" Value="#91BAD2"/>
                <Setter Property="FontFamily" Value="myFont"/>
                <Setter Property="FontSize" Value="Medium"/>
                
            </Style>
          
            <Style x:Key="headingLabel" TargetType="Label">
                <Setter Property="FontSize" Value="Large"/>
             <Setter Property="FontFamily" Value="boldFont"/>
                <Setter Property="TextColor" Value="#296D98"/>
                
              
            </Style>

             <Style x:Key="dateLabel" TargetType="Label">
                <Setter Property="FontSize" Value="Title"/>
             <Setter Property="FontFamily" Value="boldFont"/>
                <Setter Property="TextColor" Value="Black"/>
                 <Setter Property="HorizontalOptions" Value="Center"/>
              
            </Style>

             <Style x:Key="regularLabel" TargetType="Label">
                <Setter Property="FontSize" Value="Default"/>
               <Setter Property="FontFamily" Value="myFont"/>
                  <Setter Property="TextColor" Value="Black"/>
            </Style>
                         <Style  TargetType="ImageButton">
                
                  <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Frame >
        <ScrollView>
             <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="0.05*"></RowDefinition>
                <RowDefinition Height="0.1*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"></ColumnDefinition>
                  <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
                  <Frame  Grid.ColumnSpan="2">
                     <Label Style="{StaticResource dateLabel}" Text="{Binding myDate}"/>
                 </Frame>
                  
                      <StackLayout  Margin="10" Grid.Row="1" Grid.ColumnSpan="2">
                           <Label Style="{StaticResource headingLabel}" Text="Your Activities"/>
                           <BoxView HeightRequest="1" Color="#00000" IsVisible="True"/>
                            <Label Style="{StaticResource regularLabel}" Text="&#x2022; Click the + button to record a new activity "/>
                            <Label Style="{StaticResource regularLabel}" Text="&#x2022; Record your Fatigue levels on a scale of 1-10"/>
                           <Label Style="{StaticResource regularLabel}" Text="&#x2022; Click 'Submit' to save the entry to your diary"/>
                      </StackLayout>
                    
                 
                

            <Label Style="{StaticResource headingLabel}" Margin="10" Grid.Row="1" />
<ScrollView Margin="5" Grid.Row="2" Grid.ColumnSpan="2">
   
      <StackLayout x:Name="myLayout">
         
             <ImageButton HeightRequest="30" WidthRequest="30" Source="bluePlus.png" Clicked="addItem"/>
           </StackLayout>
      
</ScrollView>
               
    
            

                  
                 <StackLayout Margin="20" Grid.Row="3" Grid.ColumnSpan="2">

                     <Label  Style="{StaticResource headingLabel}" Text="Fatigue Level" />

        <Slider x:Name="slider"
                Minimum="0" Maximum="10" ThumbColor="Black"  MinimumTrackColor="red" MaximumTrackColor="Blue" />
                     <Label Style="{StaticResource regularLabel}" Text="{Binding Source={x:Reference slider},
                                  Path=Value}"/>
                 </StackLayout>
                 

                 <Button Style="{StaticResource myButton}" Grid.Row="4" Grid.ColumnSpan="2" Text="Submit" Clicked="submitActivities" ></Button>
        </Grid>
         


       </ScrollView>
    </Frame>
   
     
   
</ContentPage>

